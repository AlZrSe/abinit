#Fe in GGAU with usepawu=4

#OPTIONS AND DATASETS
ndtset 1
prtvol 3
pawprtvol -3
getwfk -1
irdwfk1 0
iscf 7 
nstep 16
tolvrs 1.0d-10
chksymbreak 0


# CONVERGENCE PARAM
ecut 16
pawecutdg  40
nband  16
occopt 7
tsmear 1600 K


# PHYSICAL DATA
natom 1 ntypat  1 typat  1  
znucl  26.0 
xred  0.d0   0.d0   0.d0
rprim   1.0  0.0 0.0
        0.5  0.5 0.5
        0.0  0.0 1.0
acell  3*5.41

# POINTSK 
kptopt 1  
ngkpt 6 6 6
nshiftk 1
shiftk 1/2 1/2 1/2


# SPIN 
nsppol 2  
nspden 2 
spinat 0.0 0.0 4.0

# LDA+U
usepawu    4
dmatpuopt 2
lpawu   2
upawu  6.0000 eV
jpawu  0.0000 eV

