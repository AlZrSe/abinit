# Test for non-collinear dfpt response with B field at q/=0
# bcc bulk Fe, low ecut, coarse kpt grid

  nsym    1
  ndtset  2

  prtvol  1

  #---Structure-----------------------------------------------------
  natom   1
  znucl   26
  ntypat  1
  typat   1
  spinat  0.0 0.0 2.15

  acell   3*5.42
  xred    0.0  0.0  0.0
  rprim  -0.5  0.5  0.5
          0.5 -0.5  0.5
          0.5  0.5 -0.5

  #---Approximations------------------------------------------------
  ixc     7    # LSDA from libxc
  nsppol  1    # single spin polarization channel
  nspinor 2    # use spinorial wavefunctions
  nspden  4    # and a 4-component density matrix

  so_psp  0    # no Spin Orbit coupling

  nband   16
  ecut    30.0
  tsmear  0.01
  occopt  3

  #---K-point grid--------------------------------------------------
  kptopt    3
  istwfk    8*1
  ngkpt     2 2 2
  nshiftk   1
  shiftk    0.0 0.0 0.0

  #---Other---------------------------------------------------------
  prtdensph 1
  nstep     50

  #---DATASET 1: GS caluclation------------------------------------
   getwfk1  0
   tolvrs1  1.0d-17

  #---DATASET 2: Response------------------------------------------
   tolvrs2  1.0d-8
   ixcrot2  3    # direct evaluation of the xc potential
  tim1rev2  0    # perturbation breaks time reversal symmetry
   getwfk2 -1
   rfmagn2  1
    rfdir2  1 1 1
     nqpt2  1
      qpt2  0.5 0.0 0.0

